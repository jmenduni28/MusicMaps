<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_artist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joemenduni.musicmaps.AddShowActivity"
    tools:background="@android:color/darker_gray">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/artistName"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/add_artist__name"
        android:textSize="@dimen/field_label_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/add_artist__genre"
        android:textSize="@dimen/field_label_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:layout_below="@+id/artistName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/add_artist__website"
        android:textSize="@dimen/field_label_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textStyle="normal|bold"
        android:layout_below="@+id/artistGenre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/artistWebsite"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/add_artist__picture_url"
        android:textSize="@dimen/field_label_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textStyle="normal|bold"
        android:layout_below="@+id/artistWebsite"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:id="@+id/artistPictureURL" />

    <TextView
        android:text="@string/add_artist__town"
        android:textSize="@dimen/field_label_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textStyle="normal|bold"
        android:layout_below="@+id/artistPictureURL"
        android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/artistTown"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/artistGenre" />

        <TextView
            android:text="@string/add_artist__state"
            android:textSize="@dimen/field_label_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textStyle="normal|bold"
            android:layout_below="@+id/artistPictureURL"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <TextView
            android:text="@string/add_artist__zip"
            android:textSize="@dimen/field_label_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textStyle="normal|bold"
            android:layout_below="@+id/artistTown"
            android:layout_alignEnd="@+id/textView10"
            android:layout_marginEnd="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/artistZipCode"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true"
            android:inputType="number"
            android:layout_alignEnd="@+id/artistTown" />

    <Button
        android:text="@string/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="addArtist"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView11" />

    <Button
        android:text="@string/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="clearFields"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/artistZipCode" />

    <TextView
        android:textSize="@dimen/field_label_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:text="@string/add_artist__members"
        android:textAlignment="center"
        android:layout_below="@+id/artistTown"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/artistState"
        android:layout_below="@+id/textView12"
        android:layout_toEndOf="@+id/artistPictureURL"
        android:layout_marginStart="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/button2"
        android:id="@+id/artistMemberCount"
        android:layout_alignStart="@+id/artistState" />

    <TextView
        android:text="@string/add_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/page_title_size"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/artistGenre"
        android:layout_width="200sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />


</RelativeLayout>
